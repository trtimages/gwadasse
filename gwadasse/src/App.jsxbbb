/* ---------- √âcran Signalement ---------- */
function ReportScreen({ addReports }) {
  const { beachId } = useParams();
 
  const beach = beaches.find((b) => b.id === beachId);

  // 0 = non renseign√©, 1/2/3 = niveaux
  const [sargasses, setSargasses] = React.useState(0);
  const [rain, setRain] = React.useState(0);
  const [swim, setSwim] = React.useState(0);

  function toggle(current, value, setter) {
    setter(current === value ? 0 : value);
  }

  function submit() {
    const ts = Date.now();

    const batch = [];
    if (sargasses) batch.push({ beachId, type: "sargasses", level: sargasses, ts });
    if (rain) batch.push({ beachId, type: "rain", level: rain, ts });
    if (swim) batch.push({ beachId, type: "swim", level: swim, ts });

    if (batch.length === 0) {
      alert("Choisis au moins 1 info √† signaler üôÇ");
      return;
    }

    addReports(batch);
    window.location.href = `/beach/${beachId}`;

  }

  return (
    <Layout>
      <h2 style={{ margin: "8px 0 4px" }}>Signaler</h2>
      <div style={{ color: "#666", marginBottom: 12 }}>
        {beach ? beach.name : "Plage inconnue"}
      </div>

      <PickerBlock
        title="Sargasses"
        items={[
          { label: "Aucune", icon: "üü¢", value: 1 },
          { label: "Mod√©r√©es", icon: "üü†", value: 2 },
          { label: "Importantes", icon: "üî¥", value: 3 },
        ]}
        selected={sargasses}
        onPick={(v) => toggle(sargasses, v, setSargasses)}
      />

      <PickerBlock
        title="Pluie sur place"
        items={[
          { label: "Pas de pluie", icon: "‚òÄÔ∏è", value: 1 },
          { label: "Averses", icon: "üå¶Ô∏è", value: 2 },
          { label: "Forte pluie", icon: "üåßÔ∏è", value: 3 },
        ]}
        selected={rain}
        onPick={(v) => toggle(rain, v, setRain)}
      />

      <PickerBlock
        title="Baignade (drapeaux)"
        items={[
          { label: "Vert", icon: "üü¢", value: 1 },
          { label: "Jaune", icon: "üü†", value: 2 },
          { label: "Rouge", icon: "üî¥", value: 3 },
        ]}
        selected={swim}
        onPick={(v) => toggle(swim, v, setSwim)}
      />

      <button
        type="button"
        onClick={submit}
        style={{
          width: "100%",
          marginTop: 12,
          background: "black",
          color: "white",
          border: "none",
          borderRadius: 12,
          padding: 12,
          fontWeight: 700,
          cursor: "pointer",
        }}
      >
        Envoyer le signalement
      </button>

      <div style={{ marginTop: 16 }}>
        <Link to={`/beach/${beachId}`} style={{ color: "#444" }}>
          ‚Üê Retour fiche plage
        </Link>
      </div>
    </Layout>
  );
}


